<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/NavigationDrawer"
    android:fitsSystemWindows="true"
    tools:context="com.su.honey.livelarge">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/nav_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Main_Frame"
            android:layout_below="@+id/nav_toolbar">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_image"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_margin="10dp"
                    android:minHeight="190dp"
                    android:minWidth="320dp" />
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/tools"
                    app:cardUseCompatPadding="true"
                    android:layout_below="@+id/home_image"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:id="@+id/home_cardview"
                    android:layout_margin="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="350dp"
                            android:layout_height="80dp"
                            android:id="@+id/card_image"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/card_bed"
                            android:layout_marginRight="15dp"
                            android:layout_alignStart="@+id/card_image"
                            android:layout_below="@+id/card_image"
                            android:layout_marginTop="10dp"
                            android:layout_margin="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/card_type"
                            android:layout_below="@+id/card_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/card_price"
                            android:layout_below="@+id/card_image"
                            android:layout_alignEnd="@+id/card_image"
                            android:layout_marginTop="10dp"
                            android:layout_margin="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Medium Text"
                            android:id="@+id/card_name"
                            android:layout_alignTop="@+id/card_image"
                            android:layout_alignStart="@+id/card_image"
                            android:layout_margin="10dp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/tools"
                    app:cardUseCompatPadding="true"
                    android:layout_below="@+id/home_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:id="@+id/home_cardview1"
                    android:layout_margin="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="350dp"
                            android:layout_height="80dp"
                            android:id="@+id/card_image"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/card_bed"
                            android:layout_marginRight="15dp"
                            android:layout_alignStart="@+id/card_image"
                            android:layout_below="@+id/card_image"
                            android:layout_marginTop="0dp"
                            android:layout_margin="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/card_type"
                            android:layout_below="@+id/card_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/card_price"
                            android:layout_below="@+id/card_image"
                            android:layout_alignEnd="@+id/card_image"
                            android:layout_marginTop="10dp"
                            android:layout_margin="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Medium Text"
                            android:id="@+id/card_name"
                            android:layout_alignTop="@+id/card_image"
                            android:layout_alignStart="@+id/card_image"
                            android:layout_margin="10dp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
            </ScrollView>
        </FrameLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/NavigationView"
        app:itemIconTint="@color/Red"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/navviewheader">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>