<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    tools:context="com.su.honey.livelarge"
    android:background="@drawable/header_cover">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/navheader_image"
        android:src="@drawable/applogo"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LiveLarge"
        android:id="@+id/navheader_label"

        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/navheader_image"
        android:layout_toEndOf="@+id/navheader_image" />

</RelativeLayout>