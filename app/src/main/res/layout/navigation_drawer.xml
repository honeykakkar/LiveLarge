<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/NavigationDrawer"
    android:fitsSystemWindows="true"
    tools:context="com.su.honey.livelarge.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/nav_toolbar"
            android:layout_width="match_parent"
            android:background="@color/Red"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Main_Frame"
            android:layout_below="@+id/nav_toolbar">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_image"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:minHeight="190dp"
                    android:minWidth="320dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/tools"
                    xmlns:app1="http://schemas.android.com/apk/res-auto"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_below="@+id/home_image"
                    android:layout_marginRight="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app1:cardPreventCornerOverlap="false"
                    android:id="@+id/card_home_first">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/card_image_home"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/xcardview_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:alpha="0.5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="2 BHK"
                            android:id="@+id/card_bed_home"
                            android:layout_marginRight="15dp"
                            android:layout_alignStart="@+id/card_image_home"
                            android:layout_below="@+id/card_image_home"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Apartment"
                            android:id="@+id/card_type_home"
                            android:layout_below="@+id/card_image_home"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="$ 2000"
                            android:id="@+id/card_price_home"
                            android:layout_below="@+id/card_image_home"
                            android:layout_alignEnd="@+id/card_image_home"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="340 Westcott Street"
                            android:id="@+id/card_name_home"
                            android:layout_alignTop="@+id/card_image_home"
                            android:layout_alignStart="@+id/card_image_home"
                            android:layout_margin="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/Red" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/tools"
                    xmlns:app1="http://schemas.android.com/apk/res-auto"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_below="@+id/card_home_first"
                    android:layout_marginRight="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app1:cardPreventCornerOverlap="false">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/card_image_home1"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/xcardview_image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY"
                            android:alpha="0.5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="3 BHK"
                            android:id="@+id/card_bed_home1"
                            android:layout_marginRight="15dp"
                            android:layout_alignStart="@+id/card_image_home1"
                            android:layout_below="@+id/card_image_home1"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Apartment"
                            android:id="@+id/card_type_home1"
                            android:layout_below="@+id/card_image_home1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="$ 1800"
                            android:id="@+id/card_price_home1"
                            android:layout_below="@+id/card_image_home1"
                            android:layout_alignEnd="@+id/card_image_home1"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="207 Euclid Avenue"
                            android:id="@+id/card_name_home1"
                            android:layout_alignTop="@+id/card_image_home1"
                            android:layout_alignStart="@+id/card_image_home1"
                            android:layout_margin="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/Red" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>
            </ScrollView>
        </FrameLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/NavigationView"
        app:itemIconTint="@color/Red"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/navviewheader">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>